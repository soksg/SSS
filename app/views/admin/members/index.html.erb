<div class="container text-center my-5" style="box-sizing: content-box; min-height: 60vh;">
  <div class="row mb-4">
    <div class="col-4 pl-5">
      <div class="row mx-5">
        <h2 class="px-3">会員一覧</h2>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class ="col-sm-9">
      <table class="table table-hover">
        <thead>
          <tr class="active">
            <th class="col-2">会員ID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
          <tr>
            <td>
              <%= member.id %>
            </td>
            <td>
              <%= link_to admin_member_path(member) do %>
                <%= member.name %>
              <% end %>
            </td>
            <td>
              <%= member.email %>
            </td>
            <td>
              <% if member.is_active == true %>
                <p>有効</p>
              <% else %>
                <p>退会</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="ml-3"><%= paginate @members %></div>
    </div>
  </div>
</div>