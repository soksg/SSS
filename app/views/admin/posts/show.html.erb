<h2 class="my-4 ml-5 px-5">投稿詳細</h2>
  <div class="row ml-2">
    <div class="col-9">
      <div class="ml-5 px-5">
        <table class="table ml-5">
            <tr>
              <td><b>施設名</b></td>
              <td><%= @post.name %></td>
              <!--ブックマークボタン-->
              <td id="bookmark_buttons_<%= @post.id %>">
                <%= render 'public/bookmarks/bookmark', post: @post %>
              </td>
            </tr>
            <tr>
              <td id="avg">
                <b>評価 :<%= @reviews_avg_score %>点</b>
              </td>
              <td id="star-rate" colspan="2"></td>
            </tr>
            <tr>
              <td><b>住所・地図</b></td>
              <td>
                <%= @post.address %>
                <!--googlemap-->
                <%= render 'map', post: @post %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td><b>画像</b></td>
              <td><%= image_tag @post.get_image(100,100) %></td>
              <td></td>
            </tr>
            <tr>
              <td><b>電話番号</b></td>
              <td><%=  @post.phone_number %></td>
              <td></td>
            </tr>
            <tr>
              <td><b>営業時間</b></td>
              <td><%= @post.opening_hour %></td>
              <td></td>
            </tr>
            <tr>
              <td><b>URL</b></td>
              <td><%= @post.url %></td>
              <td></td>
            </tr>
            <tr>
              <td><b>説明</b></td>
              <td><%= @post.description %></td>
              <td></td>
            </tr>
            <tr>
              <td><b>タグ</b></td>
              <td>tag_name</td>
              <td></td>
            </tr>
            <tr>
              <td><b>投稿日</b></td>
              <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
              <td></td>
            </tr>
        </table>
          <p style="text-align: end;">
            <%= link_to "投稿削除", admin_post_path(@post), method: :delete, class: "btn btn-danger" %>
          </p>
        <div class="ml-5 mt-5">
          <p id="commentsCount">
            <b>コメント件数:<%= @post.post_comments.count %></b>
          </p>

          <!--コメント一覧-->
          <table class="table", id="comments_<%= @post.id %>">
            <%= render 'admin/post_comments/comments', post: @post %>
          </table>
      </div>
    </div>
  </div>
</div>
<script>
  var elem = document.getElementById("star-rate");
  var opt = {
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: <%= @reviews_avg_score %>,
  }
  raty(elem, opt);
</script>
