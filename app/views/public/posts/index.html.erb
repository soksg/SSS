<h1>投稿一覧</h1>
  <div class="row">
<!--部分テンプレート化するか-->
    <div class="col-3">
      <div>
        <h5>カテゴリ</h5>
      </div>
      <div>
        <h5>地域</h5>
      </div>
    </div>
<!--検索結果-->
    <div class="col-9">
       <% if @posts.empty? %>
          <div class="mt-5 mr-5 pr-3 mb-0">
             <h3 class="text-center"><b>投稿が見つかりませんでした</b></h3>
          </div>
       <% else %>
         <div class="mt-5 mr-5 pr-3 mb-0">
         <% @posts.each do |post| %>
          <table>
            <tr>
              <td class="lead">
                <b>
                  <%= link_to post_path(post) do %>
                    <%= post.name %>
                  <% end %>
                </b>
              </td>

              <!--ブックマークボタン-->
              <td id="bookmark_buttons_<%= post.id %>">
                <%= render 'public/bookmarks/bookmark', post: post %>
              <td>

            </tr>
            <tr>
              <td><%= post.address %></td>
            </tr>
            <tr>
              <td><%= image_tag post.get_image(100,100) %></td>
            </tr>
          </table>
            <div id="star-rate-<%= post.id %>"></div>
            <% count = post.reviews.count %>
            <% score = count != 0 ? (post.reviews.sum(:star) / post.reviews.count) : 0 %>
            <script>
                var elem = document.getElementById("star-rate-<%= post.id %>");
                var opt = {
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly: true,
                  score: <%= score %>,
                }
                raty(elem, opt);
              </script>
            <div class="border-bottom border-5">
              ここにタグを実装
            </div>
       　 <% end %>
       　</div>
       <% end %>
    </div>
  </div>
