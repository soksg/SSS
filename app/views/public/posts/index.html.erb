<h1>投稿一覧</h1>
  <div class="row">
<!--部分テンプレート化するか-->
    <div class="col-3">
      <div>
        <h5>カテゴリ</h5>
      </div>
      <div>
        <h5>地域</h5>
      </div>
    </div>
<!--検索結果-->
    <div class="col-9">
       <% if @posts.empty? %>
          <div class="mt-5 mr-5 pr-3 mb-0">
             <h3 class="text-center"><b>投稿が見つかりませんでした</b></h3>
          </div>
       <% else %>
         <div class="mt-5 mr-5 pr-3 mb-0">
         <% @posts.each do |post| %>
          <table>
            <tr>
              <td class="lead">
                <b>
                  <%= link_to post_path(post) do %>
                    <%= post.name %>
                  <% end %>
                </b>
              </td>
              <!--左から判断される-->
              <% if member_signed_in? && post.bookmarked_by?(current_member) %>
                <td>
                  <%= link_to post_bookmark_path(post, post.bookmarked(current_member).id), method: :delete do %>
                    ★
                  <% end %>
                </td>
              <% else %>
                <td>
                  <%= link_to post_bookmarks_path(post), method: :post do %>
                    ☆
                  <% end %>
                </td>
              <% end %>
            </tr>
            <tr>
              <td><%= post.address %></td>
            </tr>
            <tr>
              <td><%= image_tag post.get_image(100,100) %></td>
            </tr>
          </table>
            <div>
              ここにレビューを実装（星）
            </div>
            <div class="border-bottom border-5">
              ここにタグを実装
            </div>
       　 <% end %>
       　</div>
       <% end %>
    </div>
  </div>
