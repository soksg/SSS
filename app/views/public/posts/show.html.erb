<h2 class="my-4 ml-5 px-5">投稿詳細</h2>
  <div class="row ml-2">
    <div class="col-9">
      <div class="ml-5 px-5">
        <table class="table ml-5">
            <tr>
              <td><b>施設名</b></td>
              <td><%= @post.name %></td>
            </tr>
            <tr>
              <td>ここにレビュー（評価）表示</td>
              <!--レビュー実装後、colspan予定-->
              <!--ブックマークボタン-->
              <%= render 'bookmark', post: @post %>
            </tr>
            <tr>
              <td><b>住所・地図</b></td>
              <td>
                <%= @post.address %>
                <!--ここにgooglemapを表示-->
                <%= render 'map', post: @post %>
              </td>
            </tr>
            <tr>
              <td><b>画像</b></td>
              <td><%= image_tag @post.get_image(100,100) %></td>
            </tr>
            <tr>
              <td><b>電話番号</b></td>
              <td><%=  @post.phone_number %></td>
            </tr>
            <tr>
              <td><b>営業時間</b></td>
              <td><%= @post.opening_hour %></td>
            </tr>
            <tr>
              <td><b>URL</b></td>
              <td><%= @post.url %></td>
            </tr>
            <tr>
              <td><b>説明</b></td>
              <td><%= @post.description %></td>
            </tr>
            <tr>
              <td><b>タグ</b></td>
              <td>tag_name</td>
            </tr>
            <tr>
              <td><b>投稿日</b></td>
              <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
        </table>
        <% if member_signed_in? && current_member.id == @post.member_id %>
          <p class="mt-2" style="text-align: end;">
            <%= link_to "投稿編集", edit_post_path(@post), class: "btn btn-success mr-4" %>
            <%= link_to "投稿削除", post_path(@post), method: :delete, class: "btn btn-danger" %>
          </p>
        <% end %>
        <div class="ml-5">
          <p><b>コメント件数:<%= @post.post_comments.count %></b></p>
          <table class="table">
            <% @post.post_comments.each do |post_comment| %>
              <tr>
                <td><%= post_comment.member.name %></td>
                <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= post_comment.comment %></td>
                <% if post_comment.member == current_member %>
                  <td><%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger" %></td>
                <% else %>
                  <td></td>
                <% end %>
              </tr>
            <% end %>
          </table>
            <%= form_with model: [@post, @post_comment] do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", :size => "70" %>
              <p style="text-align: end;"><%= f.submit "送信する", class: "btn btn-success" %></p>
            <% end %>
        </div>
      </div>
    </div>
  </div>
