<h2 class="my-4 ml-5 px-5">ブックマーク一覧</h2>
  <div class="row ml-2">
    <div class="col-9">
      <div class="ml-5 px-5">
        <% @bookmark_posts.each do |post| %>
          <table class="table ml-5">
            <tr>
              <td class="lead">
                <b>
                  <%= link_to post_path(post) do %>
                    <%= post.name %>
                  <% end %>
                </b>
              </td>
            </tr>
            <tr>
              <td><%= post.address %></td>
            </tr>
            <tr>
              <td><%= image_tag post.get_image(100,100) %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>