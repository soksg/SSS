<div class="container my-5" style="box-sizing: content-box; min-height: 60vh;">
  <div class="col-9 px-4 my-4">
    <div class="row">
      <h2 class="px-3">会員情報編集</h2>
    </div>
  　　　　　　　　　　　　<!--情報更新するのでupdate_path-->
      <%= form_with model: @member, url: member_path, method: :patch do |f| %>
        <table class="table table-borderless ml-5">
          <tr>
            <td>ユーザーネーム</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
        </table>
        <div class="my-5 col-11">
            <p style="text-align: end;">
              <%= f.submit "編集内容を保存", class: "btn btn-success mr-3" %>
              <%= link_to "退会する", unsubscribe_member_path(current_member), method: :get, class: "btn btn-danger" %>
            </p>
        </div>
      <% end %>
  </div>
</div>


