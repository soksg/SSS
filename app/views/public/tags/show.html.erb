<div class="row my-4 ml-5 px-5">
  <h2 class="px-3">タグが<%= @tag.name %>の投稿一覧</h2>
</div>
  <div class="row">
    <!--部分テンプレート化するか-->
    <div class="col-2 my-4 ml-5">
      <div>
        <h5>カテゴリ</h5>
      </div>
      <div>
        <h5>地域</h5>
      </div>
    </div>
    <div class="col-9">
       <% if @posts.empty? %>
          <div class="mt-5 mr-5 pr-3 mb-0">
             <h3 class="text-center"><b>投稿が見つかりませんでした</b></h3>
          </div>
       <% else %>
       <div class="mt-5 mr-5 pr-3 mb-0">
       <% @posts.each do |post| %>
        <table>
          <tr>
            <td class="lead">
              <b>
                <%= link_to post_path(post) do %>
                  <%= post.name %>
                <% end %>
              </b>
            </td>
            <!--ブックマークボタン-->
            <td id="bookmark_buttons_<%= post.id %>">
              <%= render 'public/bookmarks/bookmark', post: post %>
            <td>
          </tr>
          <tr>
            <td><%= post.address %></td>
          </tr>
          <tr>
            <td><%= image_tag post.get_image(100,100) %></td>
          </tr>
        </table>
          <p class="mb-0"><%= post.post_comments.count %>件の評価</p><div id="star-rate-<%= post.id %>"></div>
          <% count = post.post_comments.size %>
          <% score = count != 0 ? (post.post_comments.sum(:star) / post.post_comments.size) : 0 %>
          <script>
              var elem = document.getElementById("star-rate-<%= post.id %>");
              var opt = {
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= score %>,
              }
              // 再読み込みする際、星が増えないようにする
              // （再読み込み前の星の空文字にする）
              elem.innerHTML=""
              raty(elem, opt);
            </script>
          <div class="border-bottom border-5">
            <!--タグリスト-->
            <% @tag_list.each do |list| %>
              <%= link_to list.name, tag_path(list) %>
              <%= "(#{list.posts.count})" %>
            <% end %>
          </div>
     　 <% end %>
     　</div>
     <% end %>
    </div>
  </div>
