$('#comment_<%= @post.id %>').html("<%= j(render "public/comments/comment", post: @post, post_comment: @post_comment_new) %>");
$('#commentsCount').html('<b>コメント件数:<%= j(@post.post_comments.count) %></b>');


$('flash-message').html("<%= j(render 'layouts/flash') %>");

var score = <%= j(@post.post_comments.present? ? @post.post_comments.sum(:star) / @post.post_comments.count : 0) %>
$('#star-rate').empty();
$('#avg').html(`評価 : ${score}点`);
  var elem = document.getElementById("star-rate");
  var opt = {
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: score,
  }
  raty(elem, opt);
