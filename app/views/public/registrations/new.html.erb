<div class="row">
  <h2 class="my-4 ml-5 px-5">新規会員登録</h2>
</div>
<div class="ml-5 px-5 col-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
           <tr>
             <td>ユーザーネーム</td>
             <td><%= f.text_field :name, placeholder: "ユーザーネーム" %></td>
           </tr>
           <tr>
             <td>メールアドレス</td>
             <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
           <tr>
             <td>パスワード(6文字以上)</td>
             <td><%= f.password_field :password, autocomplete: "new-password" %></td>
           </tr>
           <tr>
             <td>パスワード(確認用)</td>
             <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
           </tr>
           <tr>
             <td></td>
             <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
           </tr>
           <tr>
             <td></td>
             <td><%= render "public/shared/links" %></td>
           </tr>
         </table>
    <% end %>
</div>
