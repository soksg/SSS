<div class="row">
  <h2 class="my-4 ml-5 px-5">新規登録</h2>
</div>
<div class="ml-5 px-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
           <th>
             <td></td>
             <td></td>
             <td></td>
             <td></td>
             <td></td>
           </th>
           <tr>
             <td>名前</td>
             <td>(姓)</td>
             <td><%= f.text_field :last_name, placeholder: "山田" %></td>
             <td>(名)</td>
             <td><%= f.text_field :first_name, placeholder: "太郎"%></td>
           </tr>
           <tr>
             <td>フリガナ</td>
             <td>(セイ)</td>
             <td><%= f.text_field :last_name_kana, placeholder: "ヤマダ" %></td>
             <td>(メイ)</td>
             <td><%= f.text_field :first_name_kana, placeholder: "タロウ" %></td>
           </tr>
           <tr>
             <td>メールアドレス</td>
             <td></td>
             <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td>パスワード(6文字以上)</td>
             <td></td>
             <td><%= f.password_field :password, autocomplete: "new-password" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td>パスワード(確認用)</td>
             <td></td>
             <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td></td>
             <td></td>
             <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td></td>
             <td></td>
             <td><%= render "public/shared/links" %></td>
             <td></td>
             <td></td>
           </tr>
         </table>
    <% end %>


</div>
